<html>
	<% include header.ejs %>
		<% if (newUser) {%>
			<body class="new-user">
		<% }else{ %>
			<body>
		<% } %>
		<sidebar class="sidebar">
			<div class="sidebar__header">
				<h1>Report</h1>
				<div id="report-gen" class="sidebar__report-gen"></div>
				<svg class="sidebar__report-gen-loader">
					<g fill="#FFF" fill-rule="evenodd">
					</g>
				</svg>
			</div>
			<div id="tasks" class="tasks">
				<div class="tasks__labels">
					<span>Prioritized Tasks</span>
					<span>Tabs</span>
				</div>
				<ul id="task_list" class="sortable tasks__list">
					<div class="tasks__priority">
						<div class="tasks__priority--top"></div>
						<div class="tasks__priority--line"></div>
						<div class="tasks__priority--bottom"></div>
						
					</div>
				</ul>
			</div>
			<div id="sidebar_upload"></div>
		</sidebar>
		<section id="wrapper" class="body intro">
			<header class="header">
				<div class="header__wrapper">
					<img src="icons/largebee.png"/>
					<h1 class="header__wrapper--title"><span class="thin">Be</span> <span class="bold">tabulous</span></h1>
				</div>
				<div class="header__content">
					<h1>Hello <%=  name %>!</h1>
					<p>We want to help you improve the accessibility of your design by considering tab order.</p>
					<div class="basic-usage">
						<div class="basic-usage__container--upload">
							<span></span>
						</div>
						<div class="basic-usage__container--plot">
							<span></span>
						</div>
						<div class="basic-usage__container--assign">
							<span></span>
						</div>
						<div class="basic-usage__container--evaluate">
							<span></span>
						</div>
					</div>
					<button class="login__canvas">
						<span>Ready to go? Let's get tabulous.</span>
					</button>
				</div>

			</header>

			<div id="canvas" class="canvas">
				<div id="upload" class="canvas__upload">
					<div id="upload_wrapper" class="canvas__upload--inner">
						<div id="new_img" class="upload-selection"></div>
						<div id="refresh_img"  class="upload-selection"></div>
					</div>
				</div>
				<div id="interface_wrapper" class="canvas--inner">
					
					<div id="fresh_upload" class="canvas__first-upload">
						<form class="box new-upload" method="post" action="/upload" enctype="multipart/form-data">
						  <div class="box__input">
						  	<svg width="100%" height="100%" class="uploadDrop" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
						  		<input class="box__file" type="file" name="wireframe" id="file"/>
								<button class="box__button" type="submit">Upload</button>
								<g fill="#FFF" class="uploadDrop__container" fill-rule="evenodd">
									<path stroke="#FFF" fill-opacity=".2" d="M68 1l66.684 38.5v77L68 155 1.316 116.5v-77z"/>
									<text class="icon-add" font-family=".AppleSystemUIFont" font-size="56" transform="translate(1 1)">
										<tspan x="49.938" y="91">+</tspan>
									</text>
									<text class="icon-error" font-family=".AppleSystemUIFont" font-size="56" transform="translate(1 1)">
										<tspan x="59" y="100">!</tspan>
									</text>
								</g>
							</svg>
						  </div>
						</form>
						<span class="upload_support">Upload Wireframe</span>
					</div>

					<div class="demo-modal demo-modal--hide">
						<div class="demo-modal__container">
							<video class="video" width="640" loop><source src="/imgs/intro.mp4" type="video/mp4" /></video>
							<div class="copy">
								<p>Place nodes on your prototype to indicate the tabbing order of your interface. Then, label your key tasks by selecting specific nodes.</p>
								<button class="demo-modal__continue">Ok great, I got it!</button>
							</div>
						</div>
					</div>
					<div class="reupload reupload--hide">
						<div class="reupload__wrapper">
							<form class="box refresh-upload" method="post" action="/upload" enctype="multipart/form-data">
						  		<div class="box__input">
									<svg width="136" height="156" class="uploadDrop" viewBox="0 0 136 156" xmlns="http://www.w3.org/2000/svg">
										<input class="box__file" type="file" name="wireframe" id="file"/>
										<button class="box__button" type="submit">Upload</button>
										<g fill="none" class="uploadDrop__container" fill-rule="evenodd">
											<path class="icon-iteration" stroke="#FFF" fill-opacity=".9" fill="#FFF" d="M68 1l66.684 38.5v77L68 155 1.316 116.5v-77z"/><g fill="#264763"><path d="M67.135 62.307v22.49h2.732v-22.49l8.601 8.534 1.933-1.918-11.9-11.807-11.9 11.807 1.933 1.918 8.6-8.534"/><path d="M87.633 80.729v10.847H49.367V80.73H48V97h41V80.729h-1.367"/></g>
										</g>
									</svg>
								</div>
							</form>
							<form class="box new-upload" method="post" action="/upload" enctype="multipart/form-data">
						  		<div class="box__input">
									<svg width="136" height="156" class="uploadDrop" viewBox="0 0 136 156" xmlns="http://www.w3.org/2000/svg">
										<input class="box__file" type="file" name="wireframe" id="file"/>
										<button class="box__button" type="submit">Upload</button>
										<g fill="#FFF" class="uploadDrop__container" fill-rule="evenodd">
											<path stroke="#FFF" fill-opacity=".2" d="M68 1l66.684 38.5v77L68 155 1.316 116.5v-77z"/>
											<text class="icon-add" font-family=".SFNSDisplay-Regular, .SF NS Display" font-size="56" transform="translate(1 1)">
											<tspan x="49.938" y="91">+</tspan></text>
										</g>
									</svg>
								</div>
							</form>
							<!--<div id="refresh"><p>Upload Iteration</p></div>
							<div id="replace"><p>Start a'fresh</p></div>-->
							
						</div>
					</div>
				</div>
			</div>
		</section>
	</body>
</html>
