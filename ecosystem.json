{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  apps : [

    // First application
    {
      name      : "Tabulous",
      script    : "index.js",
      env: {
        "FACEBOOK_CLIENT_ID": process.env.FACEBOOK_CLIENT_ID,
        "FACEBOOK_CLIENT_SECRET":process.env.FACEBOOK_CLIENT_SECRET,
        "SESSION_SECRET":process.env.SESSION_SECRET,
        "TABULOUS_DB_UN":process.env.TABULOUS_DB_UN,
        "TABULOUS_DB_PW":process.env.TABULOUS_DB_PW,
        "TABULOUS_DB_URI":process.env.TABULOUS_DB_URI,
        "TABULOUS_DB":process.env.TABULOUS_DB,
        "TABULOUS_DB_PORT":process.env.TABULOUS_DB_PORT,
        "TABULOUS_OBJ_TOKEN_URL":process.env.TABULOUS_OBJ_TOKEN_URL,
        "TABULOUS_OBJ_AUTH_URL":process.env.TABULOUS_OBJ_AUTH_URL,
        "TABULOUS_OBJ_UN":process.env.TABULOUS_OBJ_UN,
        "TABULOUS_OBJ_PW":process.env.TABULOUS_OBJ_PW,
        "TABULOUS_FACEBOOK_CALLBACK":process.env.TABULOUS_FACEBOOK_CALLBACK,
        "BLUEMIX_PW":process.env.BLUEMIX_PW,
        "TABULOUS_OBJ_CONTAINER":process.env.TABULOUS_OBJ_CONTAINER
      },
      env_production : {
        NODE_ENV: "production"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  deploy : {
    production : {
      user : "root",
      host : "173.192.106.140",
      ref  : "origin/master",
      repo : "git@github.com:ahadik/Tabulous.git",
      path : "/root/Tabulous",
      "post-deploy" : "source /root/.tabulous && apt-get install librsvg2-dev && nvm use 5.9.0 && npm install -g gulp && npm install -g bower && npm install && bower install --allow-root && npm run decrypt && source private/tabulous-env && gulp build && pm2 startOrRestart ecosystem.json --env production",
       "env"  : {
        "NODE_ENV": "production"
      }
    },
    staging: {
      user : "root",
      host: "173.192.106.141",
      ref : "origin/development",
      repo : "git@github.com:ahadik/Tabulous.git",
      path : "/root/Tabulous",
      "post-deploy" : "source /root/.tabulous && apt-get install librsvg2-dev && nvm use 5.9.0 && npm install -g gulp && npm install -g bower && npm install && bower install --allow-root && npm run decrypt && source private/tabulous-env-staging && gulp build && pm2 startOrRestart ecosystem.json --env staging",
      "env"  : {
        "NODE_ENV": "staging"
      }
    }
  }
}
